<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.RegistroActivity"
    android:background="@android:color/holo_blue_bright">>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:stretchColumns="*">

        <TableRow android:background="@color/colorSign">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20sp">

                <EditText
                    android:id="@+id/edit_name_sig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name usuario sign"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edit_lastnames_sig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="lastanmes usuario sign"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edit_usuario_sig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="email usuario sign"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <EditText
                    android:id="@+id/edit_pass_sig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="pass usuario sign"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <Spinner
                    android:id="@+id/spinner_ciclo_sig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <Spinner
                    android:id="@+id/spinner_estado_sig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

                <Button
                    android:id="@+id/button_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign in"></Button>
            </LinearLayout>

        </TableRow>

    </TableLayout>

</LinearLayout>